{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 22,
        "patch": 1
    },
    "configurePresets": [
        {
            "name": "conan-debug",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/conan/debug/conan_toolchain.cmake"
            }
        },
        {
            "name": "conan-release",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/conan/release/conan_toolchain.cmake"
            }
        },
        {
            "name": "release",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_EXPORT_COMPILE_COMMANDS": true
            },
            "warnings": {
                "unusedCli": false
            }
        },
        {
            "name": "debug",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_TESTS": true,
                "CMAKE_EXPORT_COMPILE_COMMANDS": true
            }
        },
        {
            "name": "unix-make",
            "hidden": true,
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "clang++-18",
                "CMAKE_C_COMPILER": "clang-18",
                "CMAKE_CXX_FLAGS_INIT": "$env{CMAKE_CXX_FLAGS} -Werror -Wall -Wextra -pedantic -O2"
            }
        },
        {
            "name": "unix-release",
            "displayName": "Unix Make Release",
            "binaryDir": "${sourceDir}/build/unix-release",
            "inherits": ["unix-make", "release"],
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/unix-release/install"
            }
        },
        {
            "name": "unix-debug",
            "displayName": "Unix Make Debug",
            "binaryDir": "${sourceDir}/build/unix-debug",
            "inherits": ["unix-make", "debug", "conan-debug"],
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "-O0 --coverage -g",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/unix-deb/install"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "unix-debug",
            "displayName": "Unix Make Debug Build",
            "configurePreset": "unix-debug",
            "configuration": "Debug"
        },
        {
            "name": "unix-release",
            "displayName": "Unix Make Release Build",
            "configurePreset": "unix-release",
            "configuration": "Release"
        }
    ]
}
